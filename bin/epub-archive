require "English"
require "pathname"
require "fileutils"
require "tmpdir"
require "archive/zip"
require "epub/maker"

def main(argv)
  source_dir = argv.shift
  raise "source directory not specified" unless source_dir

  EPUB::Maker.archive(source_dir, argv.shift)
rescue => error
  $stderr.puts error
  abort "Usage: #{$PROGRAM_NAME} SOURCE_DIR [EPUB_FILE]"
end

main(ARGV)
